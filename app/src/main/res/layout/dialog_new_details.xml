<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_new_part_name_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dialog_margin"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        android:hint="@string/part_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_new_part_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:textSize="@dimen/middle_text"
            tools:text="Передние кололки" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_new_comment_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_new_part_name_layout"
        android:layout_margin="@dimen/dialog_margin"
        app:counterEnabled="true"
        app:counterMaxLength="40"
        android:hint="@string/comment">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_new_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:textSize="@dimen/small_text"
            tools:text="на вышла на 3200 руб. Фирма MegaRomb" />

    </com.google.android.material.textfield.TextInputLayout>



</androidx.constraintlayout.widget.ConstraintLayout>