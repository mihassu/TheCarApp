<?xml version="1.0" encoding="utf-8"?>
<ru.mihassu.thecarapp.ui.custom.CustomCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_background">

        <TextView
            android:id="@+id/sp_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_margin"
            android:layout_marginTop="@dimen/item_margin"
            android:gravity="center"
            android:text="@string/date"
            app:layout_constraintEnd_toStartOf="@id/sp_mileage_text"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sp_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_margin"
            android:layout_marginTop="@dimen/item_margin"
            android:gravity="center"
            android:textSize="@dimen/big_text"
            app:layout_constraintEnd_toStartOf="@id/tv_sp_mileage"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sp_date_text"
            tools:text="26.06.2020" />

        <TextView
            android:id="@+id/sp_mileage_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_marginEnd="@dimen/item_margin"
            android:gravity="center"
            android:text="@string/mileage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintStart_toEndOf="@id/sp_date_text"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_sp_mileage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_marginEnd="@dimen/item_margin"
            android:gravity="center"
            android:textSize="@dimen/big_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintStart_toEndOf="@id/tv_sp_date"
            app:layout_constraintTop_toBottomOf="@+id/sp_mileage_text"
            tools:text="36500" />


        <TextView
            android:id="@+id/et_part"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/item_margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/item_margin"
            app:layout_constraintTop_toBottomOf="@id/tv_sp_mileage"
            android:layout_marginTop="@dimen/item_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/item_margin"
            android:gravity="center"
            android:textSize="@dimen/small_text"
            tools:text="Передние кололки, масло, диски" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ru.mihassu.thecarapp.ui.custom.CustomCardView>